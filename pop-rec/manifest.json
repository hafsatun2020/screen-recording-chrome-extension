{ 
    "manifest_version" : 3,
    "name": "HelpMeOut 1",
    "description": "This extension helps you record and share help videos with ease.",
    
    "icons": {
          "32": "favicon-32x32.png"
    },
    "version" : "1.0.0",

    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": { 
        "default_popup": "popup.html"

    },
    "permissions":  [
        "scripting",
        "tabs",
        "activeTab"
    ],
        
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
       
    
     
} 